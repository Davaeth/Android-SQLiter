<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.phones.DataListActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/dataList_phoneBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/PhoneBar"
            app:theme="@style/Theme.AppCompat.Light"
            app:popupTheme="@style/Theme.AppCompat.Light"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="@color/toolbarBackground"
            android:layout_marginTop="4dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView" app:layout_constraintVertical_bias="0.0"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="647dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:id="@+id/recyclerView" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="17dp" app:layout_constraintTop_toBottomOf="@+id/dataList_phoneBar"/>

</android.support.constraint.ConstraintLayout>